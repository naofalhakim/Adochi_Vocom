<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adopsi_form_kriteria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textColor"
    tools:context="com.motionlaboratory.adochi.BerandaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/hintcolor"
        android:layout_gravity="top|center_horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        >

        <customfont.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Bukti Transfer"
            android:textColor="@color/hintcolor"
            android:textSize="8pt"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfont.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose"
                    android:textColor="@color/hitam"
                    android:textSize="6pt"
                    />
                <customfont.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hitam"
                    android:text="File"
                    android:textSize="6pt"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:background="@color/Mycolor1"
                android:layout_width="220dp">

                <customfont.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="8pt"
                    android:background="@null"
                    />

            </LinearLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="45dp"
                android:text="...."
                android:textAlignment="center"
                android:paddingLeft="-1dp"
                android:paddingRight="-1dp"
                />

        </LinearLayout>

        <customfont.MyButton
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:background="@drawable/rounded"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</LinearLayout>
