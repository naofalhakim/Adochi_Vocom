<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anak_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.motionlaboratory.adochi.AnakDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <customfont.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hintcolor"
                android:text="Informasi Panti Asuhan"
                android:gravity="center|top"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gambar_anak_1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    />


                <customfont.MyTextView
                    android:id="@+id/nama_anak_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gambar_anak_1"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/album_title" />

                <customfont.MyTextView
                    android:id="@+id/umur_anak_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_anak_1"
                    android:paddingBottom="@dimen/songs_count_padding_bottom"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:textSize="@dimen/songs_count" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <customfont.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="DETAIL : "
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/hitam"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/textColor"
                    >
                    <customfont.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMAIL : pondokAsuhan@gmail.com"
                    android:textColor="@color/hitam"
                    android:layout_marginLeft="10dp"
                    />
                    <customfont.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ALAMAT : xxxx-xxxx"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/hitam"
                    />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33"
        android:layout_gravity="bottom"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/time2"
            android:background="@color/textColor"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        >

        <customfont.MyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KONFIRMASI PENGAMBILAN"
            android:textColor="@color/textColor"
            android:background="@color/btnColor"
            android:layout_gravity="bottom"
            android:id="@+id/btn_konfirmasi"
            />
    </LinearLayout>

</LinearLayout>
