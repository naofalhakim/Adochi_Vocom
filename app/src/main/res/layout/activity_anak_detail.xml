<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_anak_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.motionlaboratory.adochi.AnakDetailActivity"
    android:fadeScrollbars="true"
    android:scrollbars="horizontal">

    <customfont.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hintcolor"
        android:text="Informasi Detail Anak Panti Asuhan"
        android:gravity="center|top"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="top"
        android:gravity="top">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gambar_anak"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top">
            <customfont.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="DETAIL Anak: "
                android:layout_marginLeft="20dp"
                android:textColor="@color/hitam"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/textColor"
                >
                <customfont.MyTextView
                    android:id="@+id/nama_anak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/album_title" />

                <customfont.MyTextView
                    android:id="@+id/umur_anak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_anak"
                    android:paddingBottom="@dimen/songs_count_padding_bottom"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:textSize="@dimen/songs_count" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:layout_gravity="bottom"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/time1"
            android:background="@color/textColor"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        >

        <customfont.MyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADOPSI"
            android:textColor="@color/textColor"
            android:background="@color/btnColor"
            android:layout_gravity="bottom"
            android:id="@+id/btn_adopsi"
            />
    </LinearLayout>

</LinearLayout>
