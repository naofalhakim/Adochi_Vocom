<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_transaksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.motionlaboratory.adochi.UploadTransaksi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/pantimalang"
            android:layout_gravity="top|center_horizontal"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            >

            <customfont.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPload bukti Transaksi"
                android:textColor="@color/hintcolor"
                android:textSize="7pt"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <customfont.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="choose file"
                    android:textSize="6pt"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@color/Mycolor1"
                        >

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/img_gmb_upload"
                            android:background="@color/hintcolor"
                            />

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="...."
                        android:id="@+id/btn_open_galeri"
                        />

                </LinearLayout>

            </LinearLayout>

            <customfont.MyButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPLOAD"
                android:id="@+id/btn_upload"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:background="@drawable/rounded"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>


</LinearLayout>
